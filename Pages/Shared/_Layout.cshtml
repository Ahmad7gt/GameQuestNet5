@inject NavigationService navService;
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameQuest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class ="layoutBackgrrundColor">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navColor ">
            <div class="container navColor">
                <a class="navbar-brand navWordsColor" asp-area="" asp-page="/Index">GameQuest</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @foreach (var nav in navService.GetMenu())
                        {
                            <li class="nav-item  ">
                                <a href="/content/@nav.Title" class="nav-link navWordsColor">@nav.Title</a>
                            </li>
                        }

                        <li class="nav-item ">
                            <a class="nav-link navWordsColor" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item ">
                            <a  id="categoryTrigger" class="nav-link navWordsColor" asp-area="" asp-page="/Products">Products</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div id="categoryNav" class="categoryClosed ">
            <div class="row">

                @foreach (var cat in navService.GetCategories())
                {

                    <div class="col-3">
                        <a href="/products/@cat.MainName.ToLower()" class="nav-link text-capitalize text-light navWordsColor">@cat.MainName</a>

                        @foreach (var sub in cat.SubCategories)
                        {
                            <a href="/products/@cat.MainName.ToLower()/@sub.ToLower()" class="nav-link text-light text-lightgrey navWordsColor">@sub</a>
                        }

                    </div>

                }

            </div>
        </div>
    </div>

    <div id="mainContainer" class="container">

        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted navFoot">
        <div class="container">
            &copy; 2021 - GameQuest - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
