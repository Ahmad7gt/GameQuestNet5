@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

}
@{
    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">

            @for (int i = 0; i < Model.Products.Count; i++)
            {
                <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="@(i == 0 ? "active" : string.Empty)"></li>
            }

        </ol>

        <div class="carousel-inner">

            @for (int i = 0; i < Model.Products.Count; i++)
            {

                <div class="carousel-item @(i == 0 ? "active" : string.Empty)" data-interval="10000">
                    <div class="layerOne">
                        <div class="floatLeft">

                            <img src="@Model.Products[i].ImgUrl" class="d-block img-ontop img-fluid imageCoursel" alt="..."   />
                        </div>
                        <div class="floatRight vertical-center">


                            <span class="carousel-title">
                                <a href="/store/detail/@Model.Products[i].Id"> @Model.Products[i].Name</a>

                                @if (@Model.Products[i].Sale > 0)
                                {
                                    <span class="badge badge-warning">@Model.Products[i].Sale%</span>
                                }



                            </span>


                            <p class="carousel-p">@Model.Products[i].Description</p>
                        </div>

                    </div>

                    <div style="background-image: url('@Model.Products[i].ImgUrl')" class="layerTwo"></div>
                </div>

            }

        </div>

        <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
            <i class="fas fa-arrow-alt-circle-left carousel-arrows"></i>
        </a>


        <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
            <i class="fas fa-arrow-alt-circle-right carousel-arrows"></i>
        </a>
    </div>
    }


