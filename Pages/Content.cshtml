@page "{pageName}"
          
@model GameQuest.Pages.ContentModel

<div>

    <h1>@Model._contentModel.Title</h1>

    @if (!string.IsNullOrEmpty(Model._contentModel.ImageUrl))
    {
        <img src="@Model._contentModel.ImageUrl" class="img-fluid" alt="" />
    }

    <p>@Model._contentModel.Body</p>

    @if (Model.showContactForm)
    {


        <form asp-page-handler="SendEmail" method="post">

            <div class="form-group">
                <input type="email" class="form-control" asp-for="emailModel.Email" placeholder="Email" />
            </div>


            <div class="form-group">

                <input type="text" class="form-control" asp-for="emailModel.Message" placeholder="Message..." />

            </div>


            <div class="form-group">

                <button type="submit" class="btn btn-primary">Send</button>

            </div>


        </form>



    }

    @if (Model.showEmailSentSuccess)
    {

        <span>EMAIL WAS SENT</span>
    }

</div>